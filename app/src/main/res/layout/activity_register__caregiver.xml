<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caregiver.Register_Caregiver"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="สมัครสมาชิกเป็นผู้ดูแล"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_caregiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ชื่อ"
                android:inputType="textPersonName"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/register_caregiver_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="นามสกุล"
                android:inputType="textPersonName"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/register_caregiver_citizen_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="เลขบัตรประจำตัวประชาชน"
                android:inputType="textPersonName"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/register_caregiver_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/date_of_birth"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/register_caregiver_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ที่อยู่"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/register_caregiver_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/telephone"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/register_caregiver_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ความถนัดเฉพาะ"
                android:inputType="textPersonName" />

            <EditText
                        android:id="@+id/register_caregiver_carecenter_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="สังกัด"
                        android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/register_caregiver_button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:gravity="center"
        android:textColor="@color/White"
        android:textSize="@dimen/font_medium"
        android:layout_marginTop="20dp"
        android:background="@color/colorMain"
        android:onClick="onClickRegisterCaregiver" />




</LinearLayout>





