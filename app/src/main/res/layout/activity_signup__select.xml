<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caregiver.Signup_Select"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/sign_up_select_button_be_an_elder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/be_an_elder"
        android:layout_marginBottom="40px"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/White"
        android:background="@color/colorMain"
        android:onClick="onClickElder"/>

    <Button
        android:id="@+id/sign_up_select_button_be_a_care_giver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:text="@string/be_a_care_giver"
        android:textColor="@color/White"
        android:textSize="@dimen/font_medium"
        android:onClick="onClickCareGiver"/>
</LinearLayout>
